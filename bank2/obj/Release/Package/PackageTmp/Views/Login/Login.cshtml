
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>常发信用事务管理系统 登录</title>
    <link rel="icon" href="~/favicon.ico" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/Login/login.css" rel="stylesheet" />
</head>
<body>
    <div class="page login-page">
        <div class="container d-flex align-items-center">
            <div class="form-holder">
                <div class="row">
                    <div class="col-lg-4 col-md-10 offset-lg-2 offset-md-1">
                        <div class="info d-flex align-items-center">
                            <div class="content">
                                <div class="logo">
                                    <h1>欢迎登录</h1>
                                </div>
                                <p>常发信用事务管理系统</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-10 bg-white offset-lg-0 offset-md-1">
                        <div class="form d-flex align-items-center">
                            <div class="content">
                                <form class="form-validate" id="loginFrom">
                                    <div class="form-group">
                                        <input id="login-username" type="text" name="userName" required data-msg="请输入用户名" placeholder="用户名" class="input-material" />
                                    </div>
                                    <div class="form-group">
                                        <input id="login-password" type="password"  name="passWord" required data-msg="请输入密码" placeholder="密码" class="input-material" />
                                    </div>
                                    <input type="button" value="登录" id="login" onclick="Login()" class="btn btn-primary">
                                    <div style="margin-top:-40px;">
                                        <div class="custom-control custom-checkbox" style="float:right">
                                            <input type="checkbox" class="custom-control-input" id="check1" />
                                            <label class="custom-control-label" for="check1">记住密码&emsp;</label>
                                        </div>
                                        <div class="custom-control custom-checkbox" style="float:right">
                                            <input type="checkbox" class="custom-control-input" id="check2" />
                                            <label class="custom-control-label" for="check2">自动登录&emsp;</label>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Login/Login.js"></script>
</body>
</html>
